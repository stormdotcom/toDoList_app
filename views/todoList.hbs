<div class="container mx-auto d-flex justify-content-center">
    <div class="col-10 col-sm-6 col-md-5 col-lg-4 todolist ">
            <div class="d-flex justify-content-center">
        <h1 class="pt-3"> ToDoList</h1>
    </div>
        <div class="d-flex justify-content-center">
                <ul>
                    {{#each listData}}
                        <li>{{this.item}}</li>
                    {{/each}}
        </ul>
    </div>
        <div class="col-lg-12 d-flex justify-content-center mt-2">
       <form  class="form-group" action="" method="post">
           <div class="addItem">
               <input class="form-ctl"  placeholder="Add Item" type="text" name="item">
           </div>
            {{#if err.msg}}
        <div class="error d-flex align-item-center">
     <p class=""> <strong>Error </strong> {{err.msg}}</p> 
             </div>
        {{/if}} 
            
            <div class="col-lg-12 mb-3 pt-1 ">
                <button class="btn btn-primary "> Add to List</button>
            </div>
            </form>
    </div>
    </div>
</div>
